{
  "name": "h3-mcp-tools",
  "version": "0.3.0",
  "description": "Minimal MCP server built with H3 v2 (beta) as a dedicated app or nested-app.",
  "repository": "sandros94/h3-mcp-tools",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "obuild",
    "dev": "cd playground && pnpm dev",
    "lint": "eslint . && prettier -c .",
    "lint:fix": "automd && eslint . --fix && prettier -w .",
    "prepack": "pnpm build",
    "release": "pnpm test && pnpm prepack && changelogen --release --push --publish",
    "test": "pnpm lint && pnpm test:types && vitest --run",
    "test:types": "tsc --noEmit --skipLibCheck"
  },
  "peerDependencies": {
    "@valibot/to-json-schema": "^1.3.0",
    "zod-to-json-schema": "^3.24.6"
  },
  "dependencies": {
    "@standard-community/standard-json": "^0.2.0",
    "@standard-schema/spec": "^1.0.0",
    "h3": "npm:h3@^2.0.0-beta.3"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@vitest/coverage-v8": "^3.2.4",
    "automd": "^0.4.0",
    "changelogen": "^0.6.1",
    "esbuild": "^0.25.5",
    "eslint": "^9.30.1",
    "eslint-config-unjs": "^0.5.0",
    "obuild": "^0.2.1",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "resolutions": {
    "h3-mcp-tools": "link:."
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=22"
  }
}
